<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title_paquete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingStart="10dp"
            android:text="@string/paquete_x"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:rowCount="2"
            android:columnCount="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_paquete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_height="43dp"
                android:src="@drawable/package_icon"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="0"/>

            <TextView
                android:text="@string/descripcion"
                android:textSize="15sp"
                android:textColor="#B1B1B1"
                android:layout_column="1"
                android:layout_columnWeight="3"
                android:layout_row="0"/>

            <TextView
                android:id="@+id/tv_descripcion"
                android:layout_width="150dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:textSize="17sp"
                android:text="@string/xxxxxxxx"
                android:textStyle="bold"
                android:layout_column="1"
                android:layout_columnWeight="3"
                android:layout_row="0"/>

            <ImageView
                android:layout_height="43dp"
                android:src="@drawable/ruler_icon"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="1"/>

            <TextView
                android:text="@string/dimension"
                android:textSize="15sp"
                android:textColor="#B1B1B1"
                android:layout_column="1"
                android:layout_columnWeight="3"
                android:layout_row="1"/>

            <TextView
                android:id="@+id/tv_dimensiones"
                android:layout_width="150dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:textSize="17sp"
                android:text="@string/xxxxxxxx"
                android:textStyle="bold"
                android:layout_column="1"
                android:layout_columnWeight="3"
                android:layout_row="1"/>

        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>